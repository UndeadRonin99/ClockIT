<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:textAlignment="center"
    tools:context=".register_page">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="146dp"
        android:layout_gravity=""
        android:layout_marginBottom="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/blue_snail"
        app:layout_constraintBottom_toTopOf="@+id/textView19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="48dp"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView25"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/txtRUsername"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="19dp"
        android:text="create a new account"
        android:textAlignment="center"
        android:textColor="#C4C4C4"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/textView19"
        app:layout_constraintStart_toStartOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="9dp"
        android:text="UserName"
        android:textColor="#FEFCFC"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtRUsername"
        app:layout_constraintStart_toStartOf="@+id/txtRUsername"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <EditText
        android:id="@+id/txtRUsername"
        android:layout_width="316dp"
        android:layout_height="39dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/custom_input"
        android:drawablePadding="8dp"
        android:hint="Username"
        android:padding="8dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/textView27"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/textView27"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="9dp"
        android:text="Password"
        android:textColor="#FEFCFC"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtRpassword"
        app:layout_constraintStart_toStartOf="@+id/txtRpassword"
        app:layout_constraintTop_toBottomOf="@+id/txtRUsername" />


    <EditText
        android:id="@+id/txtRpassword"
        android:layout_width="316dp"
        android:layout_height="39dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/custom_input"
        android:drawablePadding="8dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView27" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="9dp"
        android:text="Confirm Password"
        android:textColor="#FEFCFC"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtCPassword"
        app:layout_constraintStart_toStartOf="@+id/txtRpassword"
        app:layout_constraintTop_toBottomOf="@+id/txtRpassword" />

    <EditText
        android:id="@+id/txtCPassword"
        android:layout_width="316dp"
        android:layout_height="39dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/custom_input"
        android:drawablePadding="8dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btnRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="338dp"
        android:layout_height="58dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#46A0E3"
        android:text="Register"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCPassword" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_marginStart="45dp"
        android:text="Already have an account?"
        android:textColor="#C4C4C4"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView

        android:id="@+id/textView2"
        android:layout_width="67dp"

        android:layout_height="32dp"

        android:layout_marginEnd="57dp"
        android:layout_marginBottom="99dp"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister" />

</androidx.constraintlayout.widget.ConstraintLayout>