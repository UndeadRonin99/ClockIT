<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="#000000"
    android:textAlignment="center"
    tools:context=".LogHours">

    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="157dp"
        android:layout_height="160dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/DatePicker"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnAddPhoto"
        android:layout_width="161dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="33dp"
        android:backgroundTint="#1B232E"
        android:hapticFeedbackEnabled="false"
        android:shadowColor="#1B232E"
        android:text="Add Photo"
        android:textColorHighlight="#1B232E"
        android:textColorHint="#1B232E"
        android:textColorLink="#1B232E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCategory1"
        app:strokeColor="#1B232E" />


    <Button
        android:id="@+id/btnTakePhoto"
        android:layout_width="161dp"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="33dp"
        android:text="Take Photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAddPhoto"
        android:backgroundTint="#1B232E"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="183dp"
        android:layout_height="69dp"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="#1B232E"
        android:hapticFeedbackEnabled="false"
        android:shadowColor="#1B232E"
        android:text="Save session"
        android:textColorHighlight="#1B232E"
        android:textColorHint="#1B232E"
        android:textColorLink="#1B232E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#1B232E" />

    <TimePicker
        android:id="@+id/spnrTime"
        android:layout_width="165dp"
        android:layout_height="154dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="84dp"
        android:theme="@style/MyDatePicker"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toTopOf="@+id/DatePicker"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtActivity1"
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:layout_marginTop="17dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:text="test"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_button" />

    <TextView
        android:id="@+id/txtCategory1"
        android:layout_width="211dp"
        android:layout_height="63dp"

        android:layout_marginTop="48dp"
        android:text="test"
        android:textColor="#8076B0"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtActivity1" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="49dp"
        android:layout_height="56dp"
        android:layout_marginStart="1dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="back1"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <DatePicker
        android:id="@+id/DatePicker"
        android:layout_width="351dp"
        android:layout_height="94dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="26dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:hapticFeedbackEnabled="true"
        android:theme="@style/MyDatePicker"
        app:layout_constraintBottom_toTopOf="@+id/btnSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="165dp"
        android:layout_height="40dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="23dp"
        android:text="Enter session length"
        android:textAlignment="center"
        android:textColor="#FEFEFE"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCategory1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="165dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="44dp"
        android:text="Enter date of session"
        android:textAlignment="center"
        android:textColor="#FEFEFE"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnrTime" />

</androidx.constraintlayout.widget.ConstraintLayout>