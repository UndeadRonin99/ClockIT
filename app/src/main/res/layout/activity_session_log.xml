<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="#000000"
    android:textAlignment="center"
    tools:context=".LogHours">

    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="161dp"
        android:layout_height="242dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAddMin"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAddPhoto"
        android:layout_width="369dp"
        android:layout_height="48dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#1B232E"
        android:hapticFeedbackEnabled="false"
        android:shadowColor="#1B232E"
        android:text="Add Photo"
        android:textColorHighlight="#1B232E"
        android:textColorHint="#1B232E"
        android:textColorLink="#1B232E"
        app:layout_constraintBottom_toTopOf="@+id/imgPreview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#1B232E" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="125dp"
        android:layout_height="242dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="#1B232E"
        android:hapticFeedbackEnabled="false"
        android:shadowColor="#1B232E"
        android:text="Save session"
        android:textColorHighlight="#1B232E"
        android:textColorHint="#1B232E"
        android:textColorLink="#1B232E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="#1B232E" />

    <TimePicker
        android:id="@+id/spnrTime"
        android:layout_width="204dp"
        android:layout_height="156dp"
        android:layout_marginBottom="384dp"
        android:theme="@style/MyDatePicker"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtActivity1"
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:layout_marginTop="17dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_button" />

    <TextView
        android:id="@+id/txtCategory1"
        android:layout_width="364dp"
        android:layout_height="60dp"

        android:layout_marginTop="124dp"
        android:textColor="#8076B0"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="49dp"
        android:layout_height="56dp"
        android:onClick="back1"
        android:layout_marginStart="1dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>