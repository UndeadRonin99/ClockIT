<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:foregroundTint="#FEFEFE"
    android:onClick="back"
    android:textAlignment="center"
    tools:context=".home_page">


    <TimePicker
        android:id="@+id/spnrTime"
        android:layout_width="169dp"
        android:layout_height="105dp"
        android:theme="@style/MyDatePicker"
        android:timePickerMode="spinner"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="272dp" />

    <Button
        android:id="@+id/btnAddMin"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:backgroundTint="#1B232E"
        android:text="Add mimimum goal"
        android:textColorHighlight="#1B232E"
        android:textColorHint="#1B232E"
        android:textColorLink="#1B232E"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="429dp" />

    <Button
        android:id="@+id/btnAddMax"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:backgroundTint="#1B232E"
        android:text="Add maximum goal"
        android:textColorHighlight="#1B232E"
        android:textColorHint="#1B232E"
        android:textColorLink="#1B232E"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="484dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="49dp"
        android:layout_height="48dp"
        android:onClick="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/back_button"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/txtActivity1"
        android:layout_width="256dp"
        android:layout_height="38dp"
        android:text="TextView"
        android:textColor="#FEFEFE"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="66dp" />

    <TextView
        android:id="@+id/txtCategory1"
        android:layout_width="212dp"
        android:layout_height="28dp"
        android:text="TextView"
        android:textColor="#FEFEFE"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="104dp" />

    <TextView
        android:id="@+id/txtMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum time: "
        android:textColor="#FEFEFE"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="172dp" />

    <TextView
        android:id="@+id/txtMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maximum time: "
        android:textColor="#FEFEFE"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="199dp" />


</androidx.constraintlayout.widget.ConstraintLayout>